@page
@model CoolEventsSystem.Views.Administrator.Users.IndexModel

<h1>Users Management</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				UserName
			</th>
			<th>
				FirstName
			</th>
			<th>
				LastName
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model.Users)
		{
			<tr>
				<td>
					@user.Id
				</td>
				<td>
					@user.UserName
				</td>
				<td>
					@user.FirstName
				</td>
				<td>
					@user.LastName
				</td>
				<td>
					<a class="btn btn-danger fw-bold text-light" asp-page="/Administrator/Users/Delete" asp-route-userId="@user.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>