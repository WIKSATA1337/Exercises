@model IEnumerable<AirConditioningServices.Data.Models.ServiceRequest>

@{
	ViewData["Title"] = "Index";
}

<h1>All Requests</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Address)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.VisitedDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreatedById)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.VisitedDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreatedById)
				</td>
				<td>
					<a class="btn btn-success" asp-action="Approve" asp-route-id="@item.Id">Approve</a>
					<a class="btn btn-warning" asp-action="Decline" asp-route-id="@item.Id">Decline</a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					<a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
				</td>
			</tr>
		}
	</tbody>
</table>
