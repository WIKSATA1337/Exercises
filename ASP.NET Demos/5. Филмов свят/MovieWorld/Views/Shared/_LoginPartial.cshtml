@using Microsoft.AspNetCore.Identity
@using MovieWorld.Data.Models;

@inject SignInManager<User> SignInManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-secondary text-light">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="btn btn-primary text-light mx-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="btn btn-primary text-light mx-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>
